<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorPrimaryDark">@color/darkPrimary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="divider">@color/divider</item>
        <item name="android:textColor">@color/textIcons</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="ContactsTheme" parent="Theme.AppCompat.Light"/>
        <style name="ContactListView">
            <item name="android:verticalScrollbarPosition" tools:targetApi="honeycomb">right</item>
            <item name="android:fastScrollAlwaysVisible" tools:targetApi="honeycomb">true</item>
            <item name="android:scrollbarStyle">outsideInset</item>
        </style>

        <style name="listViewActivatedStyle"/>

        <style name="quickContactBadgeStyle">
            <item name="android:background">@drawable/quickcontact_badge_small</item>
        </style>

        <style name="searchTextHiglight">
            <item name="android:textColor">@color/holo_blue</item>
            <item name="android:textStyle">bold</item>
        </style>

        <style name="addressHeader" parent="@android:style/TextAppearance.Small">
            <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">true</item>
            <item name="android:textStyle">bold</item>
        </style>

        <style name="addressDetail" parent="@android:style/TextAppearance.Medium">
            <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
            <item name="android:textIsSelectable" tools:targetApi="honeycomb">true</item>
        </style>

        <style name="contactNameTitle" parent="@android:style/TextAppearance.Large">
            <item name="android:textSize">38sp</item>
            <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
            <item name="android:textIsSelectable" tools:targetApi="honeycomb">true</item>
        </style>

        <style name="addressButton"/>
</resources>