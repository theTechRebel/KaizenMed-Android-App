<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkPrimary"
    tools:context="com.android4dev.navigationview.controllers.AuthFragment">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="60dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/lightPrimary"
            android:text="KaizenMed"
            android:textSize="28sp"/>
        <LinearLayout
            android:layout_marginTop="60dp"
            android:id="@+id/top"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="4">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/doctorsName"
                    android:textColorHint="@color/textIcons"
                    android:textSize="20sp"
                    android:textColor="@color/textIcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:hint="Doctors full name."/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/password"
                    android:textColorHint="@color/textIcons"
                    android:textSize="20sp"
                    android:textColor="@color/textIcons"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:hint="Password"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btnLogin"
                android:layout_marginTop="60dp"
                android:background="@color/accent_material_light"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Login"
                android:textSize="24sp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="60dp"
            android:layout_below="@+id/top"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="2">
            <TextView
                android:id="@+id/forgot"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightPrimary"
                android:text="Forgot Password"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/create"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightPrimary"
                android:text="Create Account"
                android:textSize="14sp"/>
            </RelativeLayout>
        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLargeInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>
