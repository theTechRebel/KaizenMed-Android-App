<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg"
    tools:context=".activities.AuthActivity">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/firstTextViewItem"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:text="Mobile Wallet Details"
            android:textSize="28sp"/>
        <TextView
            android:layout_below="@+id/firstTextViewItem"
            android:id="@+id/secondTextViewItem"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:text="Tick the check boxes to activate wallet use in the app."
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_below="@+id/secondTextViewItem"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            android:id="@+id/top"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="6">
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="Enter Organisation Name."
                android:textSize="12sp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/organisationName"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:hint="e.g Nyaradzo (Pvt) Ltd"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="Enter EcoCash Business Account Number or Biller Code."
                android:textSize="12sp"/>
            <LinearLayout
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/ecocashBillerCode"
                        android:textColorHint="@android:color/black"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:hint="e.g 0777902073"/>
                </android.support.design.widget.TextInputLayout>

                <com.weiwangcn.betterspinner.library.BetterSpinner
                    android:hint="Select SIM card slot with number specified above"
                    android:textSize="12sp"
                    android:id="@+id/sim_spinner1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </LinearLayout>



            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="Enter TeleCash Wallet Number or Biller Code."
                android:textSize="12sp"/>
        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/telecashBillerCode"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:hint="e.g 344578"/>
            </android.support.design.widget.TextInputLayout>

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:hint="Select SIM card slot with number specified above"
                android:textSize="12sp"
                android:id="@+id/sim_spinner2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_below="@+id/top"
            android:id="@+id/btnLogin"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@color/PrimaryColor"
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:text="Continue"
            android:textSize="15sp"/>
        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLargeInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>
