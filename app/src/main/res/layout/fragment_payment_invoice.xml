<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <android.support.v7.widget.CardView
        android:layout_marginBottom="120dp"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <TextView
            android:textColor="@android:color/black"
            android:text="Invoice Number:"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/payment_invoice_item_invoice_number"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/black"
            android:text="INV:000"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        </LinearLayout>
            <TextView
                android:textColor="@android:color/black"
                android:text="Customer Name:"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/payment_invoice_customer_name"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:textColor="@android:color/black"
                android:text="Customer Phone number:"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/payment_invoice_phone_number"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
        <TextView
            android:textColor="@android:color/black"
            android:text="Item Purhcased:"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/payment_invoice_item_purchased"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/black"
                android:text="Price per Item:"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/payment_invoice_item_price"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@android:color/black"
                    android:text="Quantity purchased:"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    android:layout_marginTop="-10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/payment_invoice_item_quantity"
                        android:textColorHint="@android:color/black"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_weight="1"
                    android:id="@+id/payment_invoice_item_save"
                    android:layout_centerHorizontal="true"
                    android:background="@color/PrimaryColor"
                    android:layout_height="wrap_content"
                    android:layout_width="120dp"
                    android:text="Save"
                    android:textSize="12sp"/>
                <Button
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:layout_below="@+id/payment_invoice_item_clear"
                    android:id="@+id/payment_invoice_item_clear"
                    android:layout_centerHorizontal="true"
                    android:background="@color/PrimaryColor"
                    android:layout_height="wrap_content"
                    android:layout_width="120dp"
                    android:text="Clear Fields"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>