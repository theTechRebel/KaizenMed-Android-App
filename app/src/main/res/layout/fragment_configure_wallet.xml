<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:padding="16dp">
    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:id="@+id/cv">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:text="Enter EcoCash Wallet Oppening Balance:"
                    android:textSize="12sp"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/config_ecocash"
                        android:textColorHint="@android:color/black"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:text="Enter TeleCash Wallet Oppening Balance:"
                    android:textSize="12sp"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/config_telecash"
                        android:textColorHint="@android:color/black"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"/>
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:layout_below="@+id/top"
                    android:id="@+id/config_save"
                    android:layout_centerHorizontal="true"
                    android:background="@color/PrimaryColor"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Save Wallet Details"
                    android:textSize="12sp"/>
                <Button
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:layout_below="@+id/top"
                    android:id="@+id/config_clear"
                    android:layout_centerHorizontal="true"
                    android:background="@color/PrimaryColor"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Clear Fields"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>