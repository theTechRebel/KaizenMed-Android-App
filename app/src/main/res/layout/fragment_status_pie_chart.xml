<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@color/app_bg"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="400dp"
        android:layout_width="match_parent">
        <android.support.v7.widget.CardView
            android:background="@android:color/white"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:background="@android:color/white"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:src="@drawable/ecocash"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <LinearLayout
                        android:weightSum="4"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:text="Status:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ecocash_color"/>
                    <TextView
                        android:id="@+id/status_active_ecocash"
                        android:layout_weight="1"
                        android:text="Active"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ecocash_color"/>
                        <TextView
                            android:layout_weight="1"
                            android:text="Balance:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/ecocash_color"/>
                        <TextView
                            android:id="@+id/status_ecocash"
                            android:layout_weight="1"
                            android:text="$300.00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/ecocash_color"/>
                        </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:background="@android:color/white"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:src="@drawable/telecash"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <LinearLayout
                        android:weightSum="4"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:text="Status:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/telecash_color"/>
                        <TextView
                            android:id="@+id/status_active_telecel"
                            android:layout_weight="1"
                            android:text="Active"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/telecash_color"/>
                        <TextView
                            android:layout_weight="1"
                            android:text="Balance:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/telecash_color"/>
                        <TextView
                            android:id="@+id/status_telecel"
                            android:layout_weight="1"
                            android:text="$135.00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/telecash_color"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>